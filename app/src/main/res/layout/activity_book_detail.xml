<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            layout="@layout/title_book_detail"/>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gongyunhaoyyy.wustweschool.yuanlai.yuanlai.library.book_detail_activity"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:src="@drawable/book_default"
                    android:id="@+id/book_img"
                    android:layout_marginLeft="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="120dp"
                    android:layout_height="156dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginBottom="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"
                            android:gravity="center_vertical|end"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="题名/责任者:" />

                        <TextView
                            android:id="@+id/writer"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"
                            android:text="出版发行项:"
                            android:gravity="center_vertical|end"
                            android:layout_width="80dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/publisher"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="14sp"
                            android:text="ISBN及定价:"
                            android:textColor="@color/colorBlack"
                            android:gravity="center_vertical|end"
                            android:layout_width="80dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/price"
                            android:textSize="12sp"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/introduction_cardview"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:ems="1"
                    android:text="简介"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


                <TextView
                    android:minHeight="100dp"
                    android:id="@+id/introduction"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/book_where_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    </ScrollView>

</LinearLayout>

