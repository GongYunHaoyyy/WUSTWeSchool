<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/course_set_shape">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/course_setting_image_blue"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="34dp"
            android:textColor="@color/colorBlue"
            android:text="课表设置"
            android:textSize="22sp"
            android:gravity="center"/>

    </LinearLayout>
</android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorLightBlack"
            android:text="@string/xueqi"
            android:gravity="center"
            android:textSize="18sp"
            android:paddingLeft="1dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/course_xq"
            android:layout_alignParentEnd="true"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="大二 第一学期"
            android:gravity="center|end"
            android:paddingRight="10dp"
            android:textColor="@color/colorDark"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tabtext"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/course_zs"
            android:layout_alignBottom="@+id/course_zs"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="1dp"
            android:paddingTop="5dp"
            android:text="@string/zhoushu"
            android:textColor="@color/colorLightBlack"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/course_zs"
            android:layout_alignParentEnd="true"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="6"
            android:gravity="center|end"
            android:paddingRight="10dp"
            android:textColor="@color/colorDark"
            android:textSize="16sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>

    <Button
        android:id="@+id/course_set_yes"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/yes"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_know"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>