<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/us_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="我的"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                </LinearLayout>

                <com.gongyunhaoyyy.wustweschool.UI.WaveView
                    android:id="@+id/wave_view"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="38dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_image"
                        android:background="@drawable/photo"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:padding="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="start|center"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/student_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="龚云浩"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/ColorWhite"/>

                        <ImageView
                            android:id="@+id/image_xingbie"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="2dp"
                            android:layout_above="@+id/student_id"
                            android:layout_toEndOf="@+id/student_name"
                            android:background="@drawable/icon_boy"/>

                        <TextView
                            android:id="@+id/student_sf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/student_name"
                            android:layout_alignBottom="@+id/student_name"
                            android:layout_marginStart="45dp"
                            android:layout_toEndOf="@+id/student_name"
                            android:textColor="@color/ColorWhite"
                            android:textSize="10sp"
                            tools:text="普通本科"/>
                        <TextView
                            android:id="@+id/student_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/student_name"
                            tools:text="ID：201613137110"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/ColorWhite"/>

                        <ImageView
                            android:id="@+id/image_user_what"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="24dp"
                            android:src="@drawable/image_what"/>

                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="200dp"
                android:background="@drawable/textview_today_class"
                android:layout_height="35dp"
                android:text="卡片-一卡通"
                android:textColor="@color/colorYellow"
                android:textSize="16sp"
                android:gravity="center|start"
                android:paddingLeft="20dp"/>


            <LinearLayout
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/yue"/>

                <TextView
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLightBlack"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:text="@string/yue"/>

                <TextView
                    android:id="@+id/remaining_balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1.5"
                    android:paddingRight="15dp"
                    android:gravity="end|center"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:id="@+id/spending_history"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/xiaofeijilu"/>

                <TextView
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:textColor="@color/colorLightBlack"
                    android:text="消费记录"/>

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center"
                    android:layout_marginRight="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/colorDark"
                    android:drawableRight="@drawable/detail_gray"
                    android:text="查看明细"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:id="@+id/lost_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/kapianguashi" />

                <TextView
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:textColor="@color/colorLightBlack"
                    android:text="卡片挂失"/>

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorDark"
                    android:drawableRight="@drawable/detail_gray"
                    android:text=""/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"/>

            <TextView
                android:layout_width="200dp"
                android:background="@drawable/text_view_not_return"
                android:layout_height="35dp"
                android:text="关于"
                android:textColor="@color/colorBlue"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:paddingLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/xiaoyuan"/>

                <TextView
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLightBlack"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:text="关于小园"/>

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorDark"
                    android:drawableRight="@drawable/detail_gray"
                    android:text=""/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/tab_us_se"/>

                <TextView
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLightBlack"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:text="作者"/>

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorDark"
                    android:drawableRight="@drawable/detail_gray"
                    android:text=""/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/yijianfankui"/>

                <TextView
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLightBlack"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:text="建议反馈"/>

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorDark"
                    android:drawableRight="@drawable/detail_gray"
                    android:text="欢迎联系"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="start|center"
            android:textSize="18sp"
            android:background="#f4f3f3"/>
            <Button
                android:id="@+id/exit_button"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp"
                android:background="@drawable/exitbutton_shape"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorOrange"
                android:textSize="15sp"
                android:text="@string/logout"/>

    </LinearLayout>
    </ScrollView>

</LinearLayout>