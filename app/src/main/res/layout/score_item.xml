<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginTop="@dimen/sub_small_spacing"
    android:layout_marginBottom="@dimen/sub_small_spacing"
    android:layout_marginLeft="@dimen/small_spacing"
    android:layout_marginRight="@dimen/small_spacing"
    android:background="@drawable/course_set_shape">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toast_icon_size">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/score_view"
                android:layout_width="@dimen/sub_huge_text"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/kcmc"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/s_small_spacing"
                android:text="程序设计基础"
                android:textSize="@dimen/medium_spacing"
                android:padding="@dimen/sub_small_spacing"
                android:gravity="start"/>
            <ImageView
                android:id="@+id/score_90"
                android:visibility="invisible"
                android:src="@drawable/score_good"
                android:layout_width="@dimen/big_text"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/sub_small_spacing"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_height="@dimen/big_text"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sub_big_spacing"
        android:layout_marginTop="@dimen/sub_small_spacing"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bx"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sub_small_spacing"
            android:textSize="@dimen/small_text"
            android:gravity="center"
            android:text="必修"/>

        <TextView
            android:id="@+id/ksxz"
            android:layout_width="150dp"
            android:layout_marginLeft="@dimen/sub_small_text"
            android:layout_height="match_parent"
            android:text="正常考试"
            android:gravity="center"
            android:textSize="@dimen/small_text"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/huge_spacing">
        <TextView
            android:id="@+id/xf"
            android:text="学分：3.0"
            android:textSize="@dimen/medium_text"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_marginBottom="@dimen/small_spacing"
            android:background="@color/tabtext"/>
        <TextView
            android:id="@+id/jd"
            android:text="绩点：3.7"
            android:gravity="center"
            android:textSize="@dimen/medium_text"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_marginBottom="@dimen/small_spacing"
            android:background="@color/tabtext"/>
        <TextView
            android:id="@+id/cj"
            android:text="成绩：87"
            android:gravity="center"
            android:textSize="@dimen/medium_text"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>

