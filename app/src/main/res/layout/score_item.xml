<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/sub_small_spacing"
    android:layout_marginBottom="@dimen/sub_small_spacing"
    android:layout_marginLeft="@dimen/small_spacing"
    android:layout_marginRight="@dimen/small_spacing"
    android:background="@drawable/course_set_shape">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/huge_spacing">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorOrange"/>

            <TextView
                android:id="@+id/kcmc"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/medium_spacing"
                android:text="程序设计基础"
                android:textSize="@dimen/medium_spacing"
                android:padding="@dimen/sub_small_spacing"
                android:textColor="@color/colorBlack"
                android:gravity="start|center"/>
            <ImageView
                android:id="@+id/score_90"
                android:visibility="invisible"
                android:src="@drawable/score_good"
                android:layout_width="@dimen/toast_icon_size"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/sub_small_spacing"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_height="@dimen/toast_icon_size"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:src="@drawable/score_clock"/>

        <TextView
            android:id="@+id/kkxq"
            android:layout_width="100dp"
            android:layout_marginLeft="@dimen/big_corner"
            android:layout_height="match_parent"
            tools:text="2017-2018-1"
            android:gravity="center|start"
            android:textSize="@dimen/small_text"/>

        <TextView
            android:id="@+id/ksxz"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            tools:text="正常考试"
            android:gravity="center|start"
            android:textSize="@dimen/small_text"/>

    </LinearLayout>

        <TextView
            android:id="@+id/xf"
            tools:text="学分：3.0"
            android:layout_width="match_parent"
            android:textSize="@dimen/small_text"
            android:gravity="center|start"
            android:layout_height="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/bx"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="32dp"
            android:textSize="@dimen/small_text"
            android:gravity="center|start"
            tools:text="必修"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/jd"
            tools:text="绩点：3.7"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_marginBottom="@dimen/small_spacing"
            android:background="@color/tabtext"/>
        <TextView
            android:id="@+id/cj"
            tools:text="成绩：87"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>

